<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>IonTrader.ServerApi</PackageId>
    <Version>1.0.0</Version>
    <Authors>IonTrader</Authors>
    <Description>High-performance .NET TCP connector for ION trading platform</Description>
    <PackageProjectUrl>https://github.com/iontrader/server-api-csharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/iontrader/server-api-csharp</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>